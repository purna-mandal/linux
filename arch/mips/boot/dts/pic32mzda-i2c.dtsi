#else
	/* Use i2c-gpio instead of pic32-i2c to avoid any possible issue with
	 * I2C peripheral errata for audio demo.
	 */
	i2c2: i2c2@gpio {
                compatible = "i2c-gpio";
                gpios = <&pioA 3 GPIO_ACTIVE_HIGH>, <&pioA 2 GPIO_ACTIVE_HIGH>;
                i2c-gpio,delay-us = <5>;
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_i2c2>;
		status = "disabled";
	};
#endif


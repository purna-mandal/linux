/ {
	i2c1: i2c@bf820000 {
		compatible = "microchip,pic32-i2c";
		reg = <0xbf820000 512>;
		interrupts = <I2C1_MASTER_EVENT DEFAULT_INT_PRI IRQ_TYPE_LEVEL_HIGH>;
		clock-frequency = <100000>;
		clocks = <&PBCLK2>;
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_i2c1>;
		status = "disabled";
	};

#if 0
